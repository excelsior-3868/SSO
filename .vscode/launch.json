{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//SSO_Backend//backend//manage.py",
            "args": ["runserver", 
                    "--noreload",
                    "--nothreading",
                    "8000"
                    ],
            "django": true,
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            }
        }
    ]
}